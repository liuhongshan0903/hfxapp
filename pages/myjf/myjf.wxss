page{background-color:#f4f4f4;}
.jfgzbox1{padding:0 3% 30rpx;}
.jfgztxt1,.jfgztxt2{width:94%; padding:30rpx 3% 40rpx; background:#fff; border-radius:10px; margin-top:20rpx;}
.jfgztt1{font-size:36rpx; line-height:60rpx; text-align:center;}
.jfgztt1 image{width:46rpx; height:22rpx; margin:0 20rpx;}
