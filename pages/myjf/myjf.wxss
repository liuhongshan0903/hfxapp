.jfgztr,.jfgztr2{border:1px solid #ddd; width: 99.5%; float:left; height:100rpx;}
.jfgztr2{background:#4697fb; border-color:#4697fb; border-bottom:1px solid #ddd; color: #fff; border-radius:10px 10px 0 0;}
.jfgztable .jfgztd,.jfgztable .jfgzth{ border-right:1px solid #ddd;}
.jfgztable .jfgztd:last-child,.jfgztable .jfgzth:last-child{ border-right:0;}
.jfgztr{border-top:0;}
.jfgztable .jfgztr:nth-child(2n+1){background: #fafafb;}

